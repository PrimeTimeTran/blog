<section id="articles">
  <div class="well">
    <h1> <%= article.title %> </h1>
      <p class="card-text"><%= @markdown.render(article.body).html_safe %></p><br>
      <div class="row" style="float: right">
        <u><p><b>Created on:</u> </b><%= article.created_at %></p>
      </div>
      <div class="row">
        <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %>
        <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure you want to delete this article?'}, class: 'btn btn-danger' %>
      </div>
  </div>
</section>
