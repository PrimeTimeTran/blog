<div class="col-md-6">
  <div class="card" id="articles">
    <div class="card-block well">
      <h4 class="card-title"><%= link_to article.title, article_path(article)%></h4>
      <h6 class="card-subtitle mb-2">Posted By: <%= article.user.email %> <%= time_ago_in_words(article.created_at) %> ago</h6>
      <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
      <%= link_to 'Show', article_path(article), class: 'card-link' %>
    </div>
  </div>
</div>
