<section id="articles">
  <container><br><br><br>
    <div class="container" id="main">
      <p id="notice"><%= notice %>
        <h2>Title:</h2>
          <%= @article.title %>
          <p>Posted By: <%= @article.user.email %> <%= time_ago_in_words(@article.created_at) %> ago</p>
      </p>

      <body>
          <h2>Body:</h2>
            <%= @article.body %>
      </body><br><br>
      <h3>Comments: </h3>
      <%= render @article.comments %>

      <h3>Reply to Article:</h3>
      <%= render 'comments/form' %>

      <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-success' %>
      <%= link_to 'Back', articles_path, class: 'btn btn-warning' %>
      <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: 'Are you sure you want to delete this article?'}, class: 'btn btn-danger' %>
    </div>
  </container><br>
</section>
