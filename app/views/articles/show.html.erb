<section id="articles">
  <container><br><br><br>
    <div class="container" id="main">
      <p id="notice"><%= notice %>
        <h2>Title:</h2>
          <%= @article.title %>
      </p>
      <body>
          <h2>Body:</h2>
          <u><p><b>Created on:</u> </b><%= @article.created_at %></p>
            <%= @article.body %>
      </body><br><br>

      <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-success' %> |
      <%= link_to 'Back', articles_path, class: 'btn btn-warning' %>
      <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: 'Are you sure you want to delete this article?'}, class: 'btn btn-danger' %>
    </div>
  </container><br>
</section>
