<section id="articles">
  <container><br><br><br>
    <div class="container" id="main">
      <p id="notice"><%= notice %>
        <h2><u><b>Title:</b></u></h2>
          <h3 style="color: red"><%= @article.title %></h3>
          <p>Posted By: <%= @article.user.email %> <%= time_ago_in_words(@article.created_at) %> ago</p>
      </p>

      <body>
          <h3><u><b>Body:</b></u></h3>
            <%= @article.body %>
      </body><br><br>
      <h4><b>Comments:</b></h4>
      <%= render @article.comments %>

      <% if user_signed_in? %>
        <h2>Reply to Article:</h2>
          <%= render 'comments/form' %>
      <% else %>
        <h3 style="color:blue">You must sign in to comment</h3><br>
      <% end %>

      <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-success' %>
      <%= link_to 'Back', articles_path, class: 'btn btn-warning' %>
      <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: 'Are you sure you want to delete this article?'}, class: 'btn btn-danger' %>
    </div>
  </container><br>
</section>
